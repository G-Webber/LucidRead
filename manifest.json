{
  "manifest_version": 2,
  "name": "LucidRead",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["Content.js"]
    }
  ],  
  "options_page": "options.html",
  "permissions": ["tabs","activeTab","storage","declarativeContent"],
  "background":{
  "scripts":["background.js"],
  "persistent": false
  },
  "browser_action": {
      "default_icon": {
        "16": "images/Icon.png",
        "128": "images/icon_128.png"
      },
      "default_popup": "popup.html"
    },
    "icons": {
      "128": "images/icon_128.png"
    }
}